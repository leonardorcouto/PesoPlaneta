<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <RadioGroup
            android:layout_width="0dp"
            android:layout_height="323dp"
            android:id="@+id/radioGroup" android:layout_marginTop="33dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" android:layout_marginEnd="5dp" android:layout_marginRight="5dp">
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/bMercurio" android:layout_weight="1"
                android:text="Mercúrio"/>
        <RadioButton
                android:text="Vênus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/bVenus" android:layout_weight="1"/>
        <RadioButton
                android:text="Marte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/bMarte" android:layout_weight="1"/>
        <RadioButton
                android:text="Júpiter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/bJupiter" android:layout_weight="1"/>
        <RadioButton
                android:text="Saturno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/bSaturno" android:layout_weight="1"/>
        <RadioButton
                android:text="Urano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/bUrano" android:layout_weight="1"/>
        <Button
                android:text="Calcular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button" android:layout_weight="1"
                android:onClick="Calcular"/>
    </RadioGroup>
    <android.support.design.widget.TextInputLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="377dp"
            tools:layout_editor_absoluteX="8dp">

    </android.support.design.widget.TextInputLayout>
    <TextView
            android:text="xx,xx KG"
            android:layout_width="212dp"
            android:layout_height="45dp" tools:layout_editor_absoluteY="450dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/textView"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="398dp"
            tools:layout_editor_absoluteX="8dp" android:id="@+id/hintou">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="hint"/>
    </android.support.design.widget.TextInputLayout>
</android.support.constraint.ConstraintLayout>